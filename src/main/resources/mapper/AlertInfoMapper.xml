<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.example.bws.infrastructure.repository.AlertInfoRepository">

    <!-- 定义字段映射 -->
    <resultMap id="alertInfoMap" type="org.example.bws.domain.model.AlertInfo">
        <id property="id" column="id"/>
        <result property="reportId" column="report_id"/>
        <result property="batteryType" column="battery_type"
                typeHandler="org.apache.ibatis.type.EnumOrdinalTypeHandler"
                javaType="org.example.bws.domain.enums.BatteryType"/>
        <result property="ruleId" column="rule_id"/>
        <result property="ruleName" column="rule_name"/>
        <result property="alertLevel" column="alert_level"/>
        <result property="alertTime" column="alert_time"/>
    </resultMap>

    <!-- 批量插入 -->
    <insert id="batchInsert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO alert_info (
        report_id,
        car_id,
        battery_type,
        rule_id,
        rule_name,
        alert_level,
        alert_time
        ) VALUES
        <foreach collection="list" item="item" separator=",">
            (
            #{item.reportId},
            #{item.carId},
            #{item.batteryType, typeHandler=org.apache.ibatis.type.EnumOrdinalTypeHandler},
            #{item.ruleId},
            #{item.ruleName},
            #{item.alertLevel},
            #{item.alertTime}
            )
        </foreach>
    </insert>

    <!-- 按车辆ID查询并排序 -->
    <select id="selectByCarIdWithSort" resultMap="alertInfoMap">
        SELECT * FROM alert_info
        WHERE car_id = #{carId}
        ORDER BY alert_time DESC
    </select>

</mapper>